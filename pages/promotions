<script>

    
    
        
    $(document).ready(function() {
        
        function renderPageData(){
            renderPromotionsListTemplate('#promotion_item_template','#promotion_item_template_no_image','#promotion_list','#promotions_not_empty_section','#promotions_empty_section',getPromotionsListByStoreName());
