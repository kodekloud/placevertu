        <div id="content-alerts" style="height:120px">
            <div id="post-deleted-alert" class="alert alert-danger" style="text-align:center;font-size:20px;padding:20px;display:none">Post Deleted</div>
            <div id="post-copied-alert" class="alert alert-info" style="text-align:center;font-size:20px;padding:20px;display:none">Post Copied</div>
            <div id="post-saved-alert" class="alert alert-success" style="text-align:center;font-size:20px;padding:20px;display:none">Post Saved</div>
